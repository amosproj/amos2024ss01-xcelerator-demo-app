generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model TimeSeriesItem {
    id              Int    @id @default(autoincrement())
    entityId        String //Example: Pump-002 - id
    propertySetName String //Example: Environment | PumpData

    data TimeSeriesDataItem[]

    @@unique([entityId, propertySetName])
}

model TimeSeriesDataItem {
    time DateTime @id

    data Json?

    // Foreign keys
    timeSeriesItemId Int
    timeSeriesItem   TimeSeriesItem @relation(fields: [timeSeriesItemId], references: [id])
}


